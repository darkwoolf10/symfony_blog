{% extends 'base.html.twig' %}
{% block title %}{{ 'My blog' }}{% endblock %}

{% block body %}
        {% for post in posts %}
            <div class="list-group">
                <div class="list-group-item list-group-item-primary"><h2>{{ post.title }}</h2></div>
                <div class="list-group-item">
                    <p>{{ post.content }}</p>
                    <p><a class="btn btn-primary right" href="{{ path('show_post', {'id': post.id}) }}"><i class="fa fa-newspaper-o" aria-hidden="true"></i> Read more</a></p>
                </div>
            </div>
            <br>
        {% endfor %}
{% endblock %}