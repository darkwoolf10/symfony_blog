{% extends '@Woolf/base.html.twig' %}
{% block body %}
    {{ wo_render_breadcrumbs() }}

    <div class="like_info alert alert-danger" style="display: none">
        Like is already standing
    </div>

    <div class="list-group">
        <div class="list-group-item active">
            <h2>
                {{ post.title }}
                <a class="pull-right" href="{{ path('subscribe', {'username': post.author}) }}"><i class="fa fa-bookmark fa-lg"></i></a>
            </h2>
        </div>
        <div class="list-group-item">
            <h4>{{ post.content|raw }}</h4>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="btn btn-dark like" href="{% for likes in post.likes if likes.user == app.user %}{{ path('like_delete', {'postId': post.id}) }}{% else %}{{ path('like_add', {'postId': post.id}) }}{% endfor %}">
            {% endif %}
                    <i class="fa fa-thumbs-up fa-lg"></i> {{ post.likes|length }}
                </a>
            <div class="pull-right">
                <form action="{{ url('delete_post', { id: post.id }) }}" method="post">
                    <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}" />
                    <button type="submit" class="btn btn-danger pointer btn-action"><i class="fa fa-trash-o fa-lg" aria-hidden="true"></i></button>
                </form>
                <a href="{{ path('edit_post', {'id': post.id}) }}" class="btn btn-primary pointer btn-action"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
            </div>

            {#<code class="category_label">{{ post.category.name }}</code>#}
            Tags:
            {% for tag in post.tags %}
                <code class="category_label">{{ tag }}</code>
            {% endfor %}
            {% if is_granted('ROLE_ADMIN') %}
            {% endif %}
        </div>
    </div>
    <br>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {{ render(controller('WoolfBundle\\Controller\\CommentController::commentNew', {'id': post.id})) }}
        <br>
    {% endif %}
    {% if post.comment|length > 0 %}
        <hr>
    {% endif %}
    {% for comment in post.comment %}
        <div class="card">
            <div class="card-header">
                <strong> {{ comment.author.username }}</strong> <span class="text-muted pull-right">{{ comment.publishedAt.date | date }}</span>
            </div>
            <div class="card-block">
                <div class="card-text ">
                    <h4>{{ comment.content }}</h4>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}