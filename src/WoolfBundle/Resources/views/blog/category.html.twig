{% extends '@Woolf/base.html.twig' %}
{% block title %}{{ 'My views' }}{% endblock %}

{% block body %}
    <h3>Category: <code>{{ category.name }}</code></h3>
    <hr>
    <div>
        {% for post in pagination %}
            <div class="list-group">
                <div class="list-group-item list-group-item-primary"><h2>{{ post.title }}</h2></div>
                <div class="list-group-item">
                    <p>{{ post.content }}</p>
                    <p>
                        <b>Tags:</b>
                        {% for tag in post.tags %}
                            <code>{{ tag }}</code>
                        {% endfor %}
                        <a class="btn btn-primary pull-right" href="{{ path('show_post', {'id': post.id}) }}"><i class="fa fa-newspaper-o" aria-hidden="true"></i> {{ 'Read more'|trans }}</a>
                    </p>
                </div>
            </div>
            <br>
        {% endfor %}
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}