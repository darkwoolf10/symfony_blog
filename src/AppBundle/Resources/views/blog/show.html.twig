{% extends 'base.html.twig' %}
{% block body %}
    <br>
    <div class="container">
        <div class="list-group">
            <div class="list-group-item active"><h2>{{ post.title }}</h2></div>
                <div class="list-group-item">
                    <h4>{{ post.content }}</h4>
                    <div class="right">
                        <a href="{{ path('delete_post', {'id': post.id}) }}"><button type="button" class="btn btn-danger pointer"><i class="fa fa-trash-o fa-lg" aria-hidden="true"></i> Delete</button></a>
                        <button type="button" class="btn btn-primary pointer"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i> Edit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}