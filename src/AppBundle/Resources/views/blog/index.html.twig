{% extends 'base.html.twig' %}
{% block title %}{{ 'My views' }}{% endblock %}

{% block body %}
    <h3>Number of posts: {{ pagination.getTotalItemCount }}</h3>
    <hr>
    {{ knp_pagination_render(pagination) }}
    {% for post in pagination %}
        <div class="list-group">
            <div class="list-group-item list-group-item-primary">
                <h2>{{ post.title }}</h2>
            </div>
            <div class="list-group-item">
                <p>{{ post.content }}</p>
                <p>
                    <span><code class="category_label">{{ post.category.name }}</code></span>
                    <a class="btn btn-info pull-right btn-action" href="{{ path('show_post', {'id': post.id}) }}"><i class="fa fa-newspaper-o fa-lg" aria-hidden="true"></i></a>
                </p>
            </div>
        </div>
        <br>
    {% endfor %}

{% endblock %}